<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_bars"
            android:padding="10sp"
            android:rotation="0"
            android:id="@+id/drawerToggle"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_hotel"
            android:padding="10sp"
            android:rotation="0"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="right"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng kí"
                android:background="@drawable/bg_white_rounded1"
                android:layout_marginRight="10dp"
                android:id="@+id/btnDangKi"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:background="@drawable/bg_orange_rounded1"
                android:textColor="@color/white"
                android:id="@+id/btnDangNhap"
                />
        </LinearLayout>

    </LinearLayout>

    <com.example.client_khach_hang2.ui.base.components.ComponentFilterPhong
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_marginTop="50dp"
        android:id="@+id/componentFilterPhong"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <com.example.client_khach_hang2.ui.base.items.ItemKhachSan
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <com.example.client_khach_hang2.ui.base.items.ItemKhachSan
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <com.example.client_khach_hang2.ui.base.items.ItemKhachSan
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <com.example.client_khach_hang2.ui.base.items.ItemKhachSan
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
