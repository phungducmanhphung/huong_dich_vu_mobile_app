<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.khach_san.KhachSanActivity"
    android:orientation="vertical"
    android:padding="20sp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên khách sạn dài thật là dài luôn Tên khách sạn dài thật là dài luôn Tên khách sạn dài thật là dài luôn "
                android:textStyle="bold"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10sp"
                >
                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_star_filed"
                    android:layout_marginRight="10sp"
                    />
                <TextView
                    android:id="@+id/tvStar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.9 / 5"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10sp"
                >

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_location"
                    android:layout_marginRight="10sp"
                    />

                <TextView
                    android:id="@+id/tvDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Located in Da Nang and within 1.4 km of My Khe Beach, Agena Hoa Ban Trắng features a private beach area, allergy-free rooms, and free WiFi throughout the property."
                    android:ellipsize="end"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá qua đêm: "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvGiaQuaDem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100.000 VNĐ"
                    />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt ngay"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_orange_rounded1"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img_khach_san"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu"
                android:layout_marginTop="20sp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:padding="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:maxLines="5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>