<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Thiết lập màu nền cho button -->
    <solid android:color="@color/white" /> <!-- Màu nền định sẵn -->

    <!-- Thiết lập viền cho button -->
    <stroke android:width="1dp" android:color="@color/gray"/> <!-- Màu viền -->

    <!-- Thiết lập góc bo tròn cho button -->
    <corners android:radius="10dp" /> <!-- Bán kính bo tròn -->

</shape>